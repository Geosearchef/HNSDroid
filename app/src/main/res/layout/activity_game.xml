<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.GameActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/gameBottomNavigation"
            android:id="@+id/gameFragmentContainer"/>

    <android.support.design.widget.BottomNavigationView android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:layout_alignParentBottom="true"
                                                        app:menu="@menu/game_bottom_navigation"
                                                        android:background="?android:attr/windowBackground"
                                                        android:id="@+id/gameBottomNavigation"/>


</RelativeLayout>